{% extends 'site.html.twig' %}

{% block title %}Edit Author{% endblock %}

{% block content %}
    <div class="form-container d-flex justify-content-center align-items-center">
        <div class="form-wrapper">
            <h1 class="form-title text-center mb-4">Edit Author</h1>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form, {'attr': {'class': 'custom-form'}}) }}
            <div class="form-group mb-3">
                {{ form_label(form.name, 'Name', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group mb-3">
                {{ form_label(form.birthDate, 'Birth Date', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.birthDate, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group mb-3">
                {{ form_label(form.biography, 'Biography', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.biography, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-primary custom-submit-btn w-100">Save Changes</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
