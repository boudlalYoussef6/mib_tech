{% extends 'site.html.twig' %}

{% block title %}Edit Book{% endblock %}

{% block content %}
    <div class="form-container d-flex justify-content-center align-items-center">
        <div class="form-wrapper">
            <h1 class="form-title text-center mb-4">Edit Book</h1>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form, {'attr': {'class': 'custom-form'}}) }}

            <div class="form-group mb-3">
                {{ form_label(form.title, 'Title', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group mb-3">
                {{ form_label(form.publicationDate, 'Publication Date', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_row(form.publicationDate, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group mb-3">
                {{ form_label(form.author, 'Author', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_row(form.author, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group mb-3">
                {{ form_label(form.categories, 'Categories', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_row(form.categories, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-primary custom-submit-btn w-100">Save Changes</button>
            {{ form_end(form) }}

            <a href="{{ path('book_list') }}" class="btn btn-secondary mt-3 w-100">Back to List</a>
        </div>
    </div>
{% endblock %}
